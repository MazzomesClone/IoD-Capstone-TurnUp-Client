{
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "http://localhost:3000/:path*"
        },
        {
            "source": "/api/:path*/",
            "destination": "http://localhost:3000/:path*/"
        },
        {
            "source": "/public/:path*",
            "destination": "http://localhost:3000/:path*"
        },
        {
            "source": "/public/:path*/",
            "destination": "http://localhost:3000/:path*/"
        }
    ]
}